<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号："
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="31dp"
        app:layout_constraintRight_toLeftOf="@+id/tel_clearEdittext"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <com.example.guoca.can_app.view.ClearEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:hint="用户名 手机号"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:id="@+id/tel_clearEdittext" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.28"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="115dp" />

    <TextView
        android:id="@+id/login_passname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="31dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        app:layout_constraintRight_toLeftOf="@+id/login_pass"
        android:layout_marginRight="50dp"
        app:layout_constraintHorizontal_bias="0.107"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/login_count"
        android:layout_marginEnd="50dp" />

    <com.example.guoca.can_app.view.ClearEditText
        android:layout_width="169dp"
        android:layout_height="18dp"
        android:hint="请输入密码"
        android:layout_marginLeft="159dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="159dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        android:id="@+id/login_pass" />

    <TextView
        android:id="@+id/zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/forget_pass"
        android:layout_marginEnd="63dp"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/forget_pass" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toLeftOf="@+id/login_pass"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="188dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/login_passname"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
