<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg">
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.6"/>
    <ImageView
        android:id="@+id/logoid_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/login_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fram1_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/count_pass_method_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/count_pass_white"
                android:visibility="visible"
                android:cropToPadding="true"/>
            <ImageButton
                android:id="@+id/count_pass_method_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/count_pass_blue"
                android:visibility="invisible"
                android:layout_margin="0dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fram2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-12dp">
            <ImageButton
                android:id="@+id/veri_login_btn_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/veri_login_btn_white"
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/veri_login_btn_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/veri_login_btn_blue"
                android:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.25"/>
    <com.example.guoca.can_app.view.AutoHeightAndWidthViewPager
            android:id="@+id/login_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </com.example.guoca.can_app.view.AutoHeightAndWidthViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.6"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="@drawable/login_btn" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.85"/>

</LinearLayout>
