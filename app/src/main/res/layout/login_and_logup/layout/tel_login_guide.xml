<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tel_method_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="20dp"/>

        <com.example.guoca.can_app.view.ClearEditText
            android:id="@+id/tel_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:ems="10"
            android:textAlignment="center"
            android:background="@drawable/input_veri_edit"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/veri_code_text_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="20dp"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/veri_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_veri_edit"
                android:ems="10"
                android:hint="  请输入验证码"
                android:inputType="textPassword">
            </EditText>
            <Button
                android:id="@+id/sent_veri_button"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/sent_veri_btn"
                android:ems="10"
                android:text="获取验证码"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>


