<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.6"/>
    <ImageView
        android:id="@+id/logoid_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tel_edit"
        android:ems="10"
        android:hint="昵称"
        android:gravity="center"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"/>
    <EditText
        android:id="@+id/login_input_phone_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tel_edit"
        android:ems="10"
        android:hint="请输入手机号"
        android:gravity="center"
        android:inputType="phone"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"/>
    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/input_tel_edit"
        android:gravity="center"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"/>
    <EditText
        android:id="@+id/veri_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tel_edit"
        android:ems="10"
        android:gravity="center"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"/>
    <FrameLayout
        android:id="@+id/register_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <EditText
            android:id="@+id/login_input_code_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_veri_edit"
            android:ems="10"
            android:hint="  请输入验证码"
            android:inputType="textPassword">
        </EditText>
        <Button
            android:id="@+id/login_request_code_btn"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/sent_veri_btn"
            android:ems="10"
            android:text="获取验证码"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.3"/>
    <Button
        android:id="@+id/login_commit_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_btn"
        android:text="注册"
        android:layout_weight="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.9"/>
</LinearLayout>
