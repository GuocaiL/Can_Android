<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.guoca.can_app.MainActivity"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/count_pass_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="#FFE4C4"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="100dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_viewpager"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tel_veri_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录"
        android:layout_marginEnd="3dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/login_viewpager"
        app:layout_constraintRight_toRightOf="@+id/login_viewpager"
        android:layout_marginBottom="29dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="206dp" />



    <Button
        android:id="@+id/login_button"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:text="登录"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="94dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <android.support.v4.view.ViewPager
        android:id="@+id/login_viewpager"
        android:layout_width="0dp"
        android:layout_height="251dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/count_pass_method"
        app:layout_constraintLeft_toLeftOf="parent"></android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>
