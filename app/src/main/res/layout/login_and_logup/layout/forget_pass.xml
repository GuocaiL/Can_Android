<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.6"/>
    <ImageView
        android:id="@+id/logoid_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账    号："
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/forget_pass_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入用户名/手机号"
            android:ems="10"
            android:textAlignment="center"
            android:background="@drawable/input_veri_edit"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"/>
    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/veri_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="20dp"/>
        <FrameLayout
            android:id="@+id/register_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_veri_edit"
                android:ems="10"
                android:hint="  请输入验证码"
                android:inputType="textPassword">
            </EditText>
            <Button
                android:id="@+id/get_veri_pass"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/sent_veri_btn"
                android:ems="10"
                android:text="获取验证码"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"/>
    <LinearLayout
        android:id="@+id/three_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/new_pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码："
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/new_pass_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_veri_edit"
            android:hint="请设置新密码"
            android:textAlignment="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.1"/>
    <Button
        android:id="@+id/new_pass_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认重置"
        android:background="@drawable/login_btn" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.9"/>
</LinearLayout>